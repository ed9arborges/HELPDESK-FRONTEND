{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@icons/*": ["assets/icons/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@core-components/*": ["components/core/*"],
      "@pages/*": ["pages/*"],
      "@layouts/*": ["components/layouts/*"],
      "@hooks/*": ["hooks/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@contexts/*": ["contexts/*"],
      "@tests/*": ["tests/*"],
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}
